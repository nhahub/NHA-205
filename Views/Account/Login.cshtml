@model Account_Test.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/signin.css">
    <script src="~/js/signin.js" defer></script>
    <title>CODEXLY - Sign in</title>
</head>
<body>
    <header class="header">
        <div class="header-left">CODEXLY</div>
        <nav class="header-nav">
            <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
            <a asp-controller="Home" asp-action="Profile" class="nav-link">Profile</a>
            <a asp-controller="Home" asp-action="Dashboard" class="nav-link">Dashboard</a>
            <a asp-controller="Home" asp-action="Courses" class="nav-link">Courses</a>
            <a asp-controller="TodoList" asp-action="Index" class="nav-link">To-Do-List</a>
            <a asp-controller="Notes" asp-action="Index" class="nav-link">My Notes</a>
            <a asp-controller="Home" asp-action="Roadmaps" class="nav-link">Roadmaps</a>
            <a asp-controller="Home" asp-action="WhiteBoard" class="nav-link">White Board</a>
            <a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a>
            <a asp-controller="Home" asp-action="About" class="nav-link">About</a>
        </nav>
    </header>
    
    <div class="container">
        <div class="left-panel">
            <form asp-controller="Account" asp-action="Login" method="post" class="login-form">
                <h1 class="form-title">welcome back</h1>
                <p class="form-subtitle">please enter your details</p>
                
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="validation-summary">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }
                
                <div class="form-group">
                    <input asp-for="Email" type="email" id="email" name="Email" placeholder="Email" class="form-input" required>
                    <span asp-validation-for="Email" class="error-message" id="email-error"></span>
                </div>
                
                <div class="form-group">
                    <input asp-for="Password" type="password" id="password" name="Password" placeholder="password" class="form-input" required>
                    <span asp-validation-for="Password" class="error-message" id="password-error"></span>
                </div>
                
                <div class="form-options">
                    <label class="remember-me">
                        <input asp-for="RememberMe" type="checkbox" class="checkbox">
                        <span>remember me</span>
                    </label>
                    <a href="#" class="forgot-password">forget password ?</a>
                </div>
                
                <input type="hidden" asp-for="ReturnUrl" />
                
                <button type="submit" class="login-btn">sign in</button>
                
                <p class="signup-link">don't have an account ? <a asp-controller="Account" asp-action="Register" class="signup-anchor">Sign up</a></p>
                
                <div class="separator">
                    <div class="separator-line"></div>
                    <span class="separator-text">OR</span>
                    <div class="separator-line"></div>
                </div>
                
                <button type="button" class="google-btn">log in with google</button>
            </form>
        </div>
        
        <div class="right-panel">
            <img src="~/images/pexels-mikhail-nilov-7988742.jpg" alt="People walking" class="side-image">
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <div class="footer-column">
                <h3>Useful Links</h3>
                <ul>
                    <li><a asp-controller="Home" asp-action="About">> About Us</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy">> Privacy Security</a></li>
                    <li><a asp-controller="Home" asp-action="Terms">> Terms Of Service</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Social Media</h3>
                <ul>
                    <li><a href="https://facebook.com" target="_blank" rel="noopener">> Facebook</a></li>
                    <li><a href="https://x.com" target="_blank" rel="noopener">> X</a></li>
                    <li><a href="https://instagram.com" target="_blank" rel="noopener">> Instagram</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Need Help ?</h3>
                <ul>
                    <li><a asp-controller="Home" asp-action="FAQ">> FAQs</a></li>
                    <li><a asp-controller="Home" asp-action="Support">> Support</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">> Contact Us</a></li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>
