@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Roadmaps</title>
  <link rel="stylesheet" href="~/css/roadmaps.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <script defer src="~/js/roadmaps.js"></script>
</head>
<body>
  <header class="header">
    <div class="header-left">Codexly</div>
    <nav class="header-nav">
      <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
      <a href="#" class="nav-link">About</a>
      <a href="#" class="nav-link">Contact</a>
      <a asp-controller="Account" asp-action="SignUp" class="sign-up-btn">Sign up</a>
    </nav>
  </header>

  <main class="page">
    <h1 class="title">Roadmaps</h1>

    <div class="search">
      <input id="search-input" type="text" placeholder="Search roadmaps (e.g., frontend, backend, devops, cs)" autocomplete="off" />
    </div>

    <h2 class="section-title">Role-based roadmaps</h2>
    <section id="role-grid" class="grid"></section>

    <h2 class="section-title">Skill-based roadmaps</h2>
    <section id="skill-grid" class="grid"></section>

    <p class="fineprint">
      Roadmap links provided courtesy of roadmap.sh.
    </p>
  </main>
</body>
</html>

