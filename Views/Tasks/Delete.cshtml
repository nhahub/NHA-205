@model Codexly.Models.TaskItem

<h1>Delete Task</h1>

<div class="delete-box">
    <p>Are you sure you want to delete this task?</p>

    <h3>@Model.Title</h3>

    <p>@Model.Description</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />

        <button type="submit" class="btn delete-btn">Delete</button>
        <a asp-action="Index" class="btn cancel-btn">Cancel</a>
    </form>
</div>

<style>
    body {
        background: #ddd;
        font-family: Arial;
    }

    .delete-box {
        width: 500px;
        background: #fff;
        padding: 20px;
        margin: 40px auto;
        border-radius: 10px;
    }

    button {
        background: red;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 6px;
    }
</style>

