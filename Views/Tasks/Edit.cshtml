@model Codexly.Models.TaskItem

<h1>Edit Task</h1>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <label>Title</label>
    <input type="text" name="Title" value="@Model.Title" required />

    <label>Description</label>
    <textarea name="Description">@Model.Description</textarea>

    <button type="submit">Save Changes</button>
    <a href="/Tasks/Index">Cancel</a>
</form>

<style>
    body {
        background: #ddd;
        font-family: Arial;
    }

    form {
        width: 500px;
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        margin: 40px auto;
        display: flex;
        flex-direction: column;
    }

    input, textarea {
        margin-bottom: 15px;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #aaa;
    }

    button {
        background: green;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 6px;
    }
</style>

