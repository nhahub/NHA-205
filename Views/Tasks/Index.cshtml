@model List<Codexly.Models.TaskItem>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My to do list</title>

    <!-- Your CSS -->
    <link rel="stylesheet" href="~/css/todolist-new.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
</head>

<body>
    <header class="header">
        <div class="header-left">Codexly</div>
        <nav class="header-nav">
            <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
            <a href="#" class="nav-link">About</a>
            <a href="#" class="nav-link">Contact</a>
            <a asp-controller="Account" asp-action="SignUp" class="sign-up-btn">Sign up</a>
        </nav>
    </header>

    <main class="page">
        <h1 class="title">My to do list</h1>

        <!-- Add new task -->
        <div class="new-plan">
            <form asp-action="Create" method="post">
                <input name="Title" id="new-plan-input" type="text"
                       placeholder="Add a new plan" autocomplete="off" required />
                <button type="submit" id="add-plan-btn">Add</button>
            </form>
        </div>

        <!-- Tasks -->
        <section id="plans" class="plans">
            @if (!Model.Any())
            {
                <p>You have no tasks yet.</p>
            }
            else
            {
                <ul>
                    @foreach (var task in Model)
                    {
                        <li>
                            <!-- Toggle done -->
                            <form asp-action="ToggleDone" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@task.Id" />
                                <button type="submit" class="toggle-btn">
                                    @if (task.IsDone)
                                    {
                                        <s>@task.Title</s>
                                    }
                                    else
                                    {
                                        @task.Title
                                    }
                                </button>
                            </form>

                            <!-- Edit -->
                            <a asp-action="Edit" asp-route-id="@task.Id" class="edit-link">Edit</a>

                            <!-- Delete -->
                            <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@task.Id" />
                                <button type="submit" class="delete-link">Delete</button>
                            </form>
                        </li>
                    }
                </ul>
            }
        </section>
    </main>
</body>
</html>
