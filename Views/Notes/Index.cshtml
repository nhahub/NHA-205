@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>notes</title>
<link rel="stylesheet" href="~/css/notes.css">
</head>
<body>
<header class="header">
	<div class="header-left">codexly</div>
	<nav class="header-nav">
		<a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
		<a href="#" class="nav-link">About</a>
		<a href="#" class="nav-link">Contact</a>
		<a asp-controller="Account" asp-action="SignIn" class="sign-up-btn">Sign in</a>
	</nav>
</header>

<main class="layout">
	<aside class="sidebar">
		<div class="sidebar-header">
			<span>Markdown Notes</span>
			<button id="add-note" class="btn small">+ New</button>
		</div>
		<ul id="notes-list" class="notes-list" aria-label="Notes list"></ul>
	</aside>

	<section class="editor">
		<input id="note-title" class="title-input" type="text" placeholder="Add Title .........." />
		<div class="editor-split">
			<div class="editor-pane">
				<div class="pane-header">Editor</div>
				<textarea id="note-body" class="body-input" placeholder="Write your markdown here...&#10;&#10;Example:&#10;# Heading&#10;**Bold text**&#10;*Italic text*&#10;- List item"></textarea>
			</div>
			<div class="preview-pane">
				<div class="pane-header">Preview</div>
				<div id="markdown-preview" class="markdown-preview"></div>
			</div>
		</div>
		<div class="editor-actions">
			<button id="delete-note" class="btn danger">Delete</button>
			<span id="save-indicator" class="save-indicator" aria-live="polite"></span>
		</div>
	</section>
</main>

<!-- Marked.js library for markdown parsing -->
<script src="https://cdn.jsdelivr.net/npm/marked@11.1.1/marked.min.js"></script>
<script src="~/js/notes.js" defer></script>
</body>
</html>

