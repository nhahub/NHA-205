@using Microsoft.AspNetCore.Identity
@using Account_Test.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CODEXLY - Unlock Your Coding Potential</title>
    <link rel="stylesheet" href="~/css/Home/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="header-left">CODEXLY</div>
        <nav class="header-nav">
            <a href="/home" class="nav-link">Home</a>
            <a href="/profile" class="nav-link">Profile</a>
            <a href="/dashboard" class="nav-link">Dashboard</a>
            <a href="/courses" class="nav-link">Courses</a>
            <a href="/todolist" class="nav-link">To-Do List</a>
            <a href="/notes" class="nav-link">My Notes</a>
            <a href="/roadmaps" class="nav-link">Roadmaps</a>
            <a href="/whiteboard" class="nav-link">Whiteboard</a>
            <a href="/contact" class="nav-link">Contact</a>
            <a href="/about" class="nav-link active about-btn">About</a>
            @if (SignInManager.IsSignedIn(User))
            {
                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                    <button type="submit" class="nav-link" style="background:none; border:none; cursor:pointer; padding:0; font:inherit;">Logout</button>
                </form>
            }
        </nav>
    </header>

    <main>
        <section class="hero">
            <div class="hero-content">
                <h1>Unlock Your Coding Potential</h1>
                <p>Learn from industry experts and build real-world skills</p>
                <a href="/dashboard" class="cta-btn">Start Learning</a>
            </div>

            <div class="courses-grid">
                <div class="course-card">
                    <h3>Python Essentials</h3>
                    <div class="icon">🐍</div>
                    <p>Learn the fundamentals of Python language and its applications in data analysis.</p>
                </div>
                <div class="course-card">
                    <h3>Web Development Bootcamp</h3>
                    <div class="icon">🌐</div>
                    <p>Start your journey in building websites using HTML, CSS, & JavaScript.</p>
                </div>
                <div class="course-card">
                    <h3>Data Structures & Algorithms</h3>
                    <div class="icon">🖥️</div>
                    <p>Deep dive into essential concepts and programming logic for problem-solving.</p>
                </div>
                <div class="course-card">
                    <h3>Java Programming for Beginners</h3>
                    <div class="icon">☕</div>
                    <p>A comprehensive introduction to Java fundamentals and data structures.</p>
                </div>
                <div class="course-card">
                    <h3>Mobile App Development (Android)</h3>
                    <div class="icon">📱</div>
                    <p>Build native Android applications from scratch using Kotlin.</p>
                </div>
                <div class="course-card">
                    <h3>Cloud Computing Basics</h3>
                    <div class="icon">☁️</div>
                    <p>An introduction to core cloud services and fundamental AWS tools.</p>
                </div>
                <div class="course-card">
                    <h3>Cybersecurity Essentials</h3>
                    <div class="icon">🔒</div>
                    <p>An introduction to protecting systems, networks, and data from digital threats.</p>
                </div>
                <div class="course-card">
                    <h3>SQL & Database Management</h3>
                    <div class="icon">🗄️</div>
                    <p>Master structured query language (SQL) for efficient data querying and manipulation.</p>
                </div>
            </div>
        </section>

        <section class="tools-section">
            <h2>With Many Tools That Help You Be Creative</h2>
            <div class="tools-grid">
                <div class="tool-card">
                    <div class="tool-label">To do list</div>
                    <div class="tool-image-placeholder" id="todo-img">
                        <div style="width:100%; height:100%; background:#a8e6cf; display:flex; align-items:center; justify-content:center; border-radius:10px;">To Do List Icon</div>
                    </div>
                </div>
                <div class="tool-card">
                    <div class="tool-label">Roadmaps</div>
                    <div class="tool-image-placeholder" id="roadmap-img">
                        <div style="width:100%; height:100%; background:#ffccbc; display:flex; align-items:center; justify-content:center; border-radius:10px;">Roadmaps Icon</div>
                    </div>
                </div>
                <div class="tool-card">
                    <div class="tool-label">Note</div>
                    <div class="tool-image-placeholder" id="note-img">
                        <div style="width:100%; height:100%; background:#b3e5fc; display:flex; align-items:center; justify-content:center; border-radius:10px;">Note Icon</div>
                    </div>
                </div>
                <div class="tool-card">
                    <div class="tool-label">White Board</div>
                    <div class="tool-image-placeholder" id="whiteboard-img">
                        <div style="width:100%; height:100%; background:#dcedc8; display:flex; align-items:center; justify-content:center; border-radius:10px;">White Board Icon</div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-column">
                <h3>Useful Links</h3>
                <ul>
                    <li><a href="/about">> About Us</a></li>
                    <li><a href="/privacy">> Privacy Security</a></li>
                    <li><a href="/terms">> Terms Of Service</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Social Media</h3>
                <ul>
                    <li><a href="https://facebook.com" target="_blank" rel="noopener">> Facebook</a></li>
                    <li><a href="https://x.com" target="_blank" rel="noopener">> X</a></li>
                    <li><a href="https://instagram.com" target="_blank" rel="noopener">> Instagram</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Need Help ?</h3>
                <ul>
                    <li><a href="/faq">> FAQs</a></li>
                    <li><a href="/support">> Support</a></li>
                    <li><a href="/contact">> Contact Us</a></li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>